{
  "name": "trackpacker2",
  "version": "1.0.0",
  "description": "Refactor of the TrackPacker app",
  "type": "module",
  "main": "./server/index.ts",
  "scripts": {
    "watch": "nodemon ./server/index.ts",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node ./dist/server/index.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "watch:build:backend": "npm run build:backend -- -w",
    "build:backend": "tsc -p ./",
    "build:frontend": "cd client && npm run build",
    "build:prod": "npm run build:backend && npm run build:frontend",
    "heroku-postbuild": "npm run build:prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jameygronewald/trackPacker2.git"
  },
  "author": "Jamey Gronewald",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jameygronewald/trackPacker2/issues"
  },
  "homepage": "https://github.com/jameygronewald/trackPacker2#readme",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.15"
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.8",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.10.0",
    "@types/node": "^14.10.1",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
